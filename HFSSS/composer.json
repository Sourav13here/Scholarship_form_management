{
    "name": "nucleon/scholarship-system",
    "description": "Scholarship Application Management System for Nucleon Coaching Institute",
    "type": "project",
    "require": {
        "php": ">=7.0",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "setasign/fpdf": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "files": [
            "config.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo 'Installation complete! Run: php -S localhost:8000 to start the server.\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
